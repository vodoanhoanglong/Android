<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/lunch_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="6dp"
        android:src="@drawable/lunch_com_tam_dai_dong"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lunch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lunch_name"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/lunch_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desciption"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lunch_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_4_0"
                android:textColor="#FFE500"/>
            <TextView
                android:id="@+id/lunch_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/_100"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>